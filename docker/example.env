# Ntfy Configuration
# Ntfy server URL and topic (required)
# Format: https://ntfy.sh/your-topic or https://your-ntfy-server.com/your-topic
NTFY_SERVER_URL=https://ntfy.sh/your-topic

# Ntfy Authentication (choose one method)
# Option 1: Bearer token authentication
NTFY_TOKEN=your_ntfy_token_here

# Option 2: Basic authentication (uncomment if using instead of token)
# NTFY_USER=your_ntfy_username
# NTFY_PASS=your_ntfy_password




# Proxmox Configuration
# PROXMOX_API_URL: Hostname/domain (required)
# Examples:
#   - pve.example.org
#   - 192.168.XXX.XX
PROXMOX_API_URL=

# Useful for reverse proxy setups using port 443. If connecting directly via IP probably set this to 8006 (required)
PROXMOX_PORT=8006

# Proxmox Authentication (choose one method)
# Method 1: Username/Password
PROXMOX_USER=root@pam
PROXMOX_PASS=your_proxmox_password

# Method 2: API Token - Granular Format (Recommended for Production)
# Uncomment these and comment out PROXMOX_PASS above:
# PROXMOX_USER=root@pam
# PROXMOX_TOKEN_NAME=proxmox-ntfy
# PROXMOX_TOKEN_VALUE=your_token_secret_here



# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO




# Optional: enable SSL verification; default: False
# VERIFY_SSL=True